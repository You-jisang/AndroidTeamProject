<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="16dp">

    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <EditText
            android:id="@+id/class_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="수업명"
            android:inputType="text"
            android:minWidth="48dp"
            android:minHeight="48dp"
            app:hintAnimationEnabled="false"
            app:hintEnabled="false" />

        <EditText
            android:id="@+id/class_professor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="교수명"
            android:inputType="text"
            android:minWidth="48dp"
            android:minHeight="48dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=" ㅤ"
                android:textSize="5sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioGroup
                android:id="@+id/location_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/check_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="전자관" />

                <RadioButton
                    android:id="@+id/check_2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="기계관" />

                <RadioButton
                    android:id="@+id/check_3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="과학관" />

                <RadioButton
                    android:id="@+id/check_4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="강의동" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=" 강의실  "
                android:textSize="20sp" />

            <EditText
                android:id="@+id/class_location_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="101"
                android:inputType="text"
                android:minWidth="48dp"
                android:minHeight="48dp" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=" 호"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"></LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"></LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioGroup
                android:id="@+id/day_radio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/check_MONDAY"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="월" />

                <RadioButton
                    android:id="@+id/check_TUESDAY"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="화" />

                <RadioButton
                    android:id="@+id/check_WEDNESDAY"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="수" />

                <RadioButton
                    android:id="@+id/check_THURSDAY"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="목" />

                <RadioButton
                    android:id="@+id/check_FRIDAY"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="금" />
            </RadioGroup>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=" 시간  "
                android:textSize="20sp" />

            <EditText
                android:id="@+id/time_start_h"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="09"
                android:inputType="text"
                android:minWidth="48dp"
                android:minHeight="48dp" />

            <TextView
                android:id="@+id/time_split2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=":"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/time_start_m"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="00"
                android:inputType="text"
                android:minWidth="48dp"
                android:minHeight="48dp" />

            <TextView
                android:id="@+id/time_split"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=" - "
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/time_end_h"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="17"
                android:inputType="text"
                android:minWidth="48dp"
                android:minHeight="48dp" />

            <TextView
                android:id="@+id/time_split3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text=":"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/time_end_m"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="30"
                android:inputType="text"
                android:minWidth="48dp"
                android:minHeight="48dp" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <Button
            android:id="@+id/btn_schedule_add_confirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:text="등록" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ㅤ" />

        <Button
            android:id="@+id/btn_schedule_add_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="48dp"
            android:minHeight="48dp"
            android:text="취소" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
