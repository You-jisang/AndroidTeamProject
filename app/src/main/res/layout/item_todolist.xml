<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:layout_constraintBottom_toBottomOf="parent">

    <TextView
        android:id="@+id/Todosource"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="todo"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/TodoTimeStamp"
        app:layout_constraintEnd_toStartOf="@+id/checkbox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TodoTimeStamp"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="TimeStamp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/TodoDday"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/Todosource" />

    <CheckBox
        android:id="@+id/checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/TodoDday"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="D-day"
        app:layout_constraintEnd_toStartOf="@+id/checkbox"
        app:layout_constraintTop_toBottomOf="@+id/Todosource" />
</androidx.constraintlayout.widget.ConstraintLayout>